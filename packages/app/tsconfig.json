{
  "compilerOptions": {
    "types": ["node"],
    "baseUrl": "src",
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["./src/types", "mdx.d.ts", "src", "scripts", "fonts.d.ts"],
  "exclude": ["node_modules", "dist", "**/*.stories.tsx"],
  "paths": {
    "rebass/styled-components": ["node_modules/rebass/styled-components"],
    "@reach/portal": ["node_modules/@reach/portal/dist/declarations/src/index.d.ts"]
  },
  "rootDir": "src"
}
